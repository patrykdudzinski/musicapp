<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="57dp"
        tools:context=".NewPlaylist">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="13dp"
        android:paddingLeft="10dp"
        android:text="Dobierz parametry i utwórz playlistę"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <Spinner
        android:id="@+id/SetMoodSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="70dp" />

    <Spinner
        android:id="@+id/SetActivitySpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="100dp" />

    <Spinner
        android:id="@+id/SetTimeSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="130dp" />

    <Button
        android:id="@+id/PlaylistGeneratorButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:text="Stwórz listę odtwarzania!" />
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:textSize="20sp"
            android:text="Twoja wygenerowana lista"
            android:visibility="gone"/>

    <ScrollView
        android:layout_width="353dp"
        android:layout_height="227dp"
        android:layout_alignStart="@+id/PlaylistGeneratorButton"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="35dp"
        android:visibility="gone">

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="194dp"
            android:layout_alignStart="@+id/PlaylistWrapper"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="21dp"
            android:visibility="gone" />

    </ScrollView>

    <Button
        android:id="@+id/SavePlaylistButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="64dp"
        android:visibility="gone"
        android:text="@string/SaveString" />

    <Button
        android:id="@+id/PlayButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="64dp"
        android:visibility="gone"
        android:text="@string/PlayString" />

    <Button
        android:id="@+id/DeletePlaylistButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/PlayButton"
        android:layout_alignParentStart="true"
        android:layout_marginRight="10dp"
        android:layout_marginStart="133dp"
        android:layout_marginBottom="64dp"
        android:visibility="gone"
        android:text="@string/DeleteString" />


</RelativeLayout>
