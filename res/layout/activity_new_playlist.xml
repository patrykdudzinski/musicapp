<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="57dp"
        tools:context=".NewPlaylist">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="13dp"
        android:paddingLeft="10dp"
        android:text="Dobierz parametry i utwórz playlistę"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <Spinner
        android:id="@+id/SetMoodSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="70dp" />

    <Spinner
        android:id="@+id/SetActivitySpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="100dp" />

    <Spinner
        android:id="@+id/SetTimeSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="130dp" />

    <Button
        android:id="@+id/PlaylistGeneratorButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:text="Stwórz listę odtwarzania!" />

    
    <ListView
        android:id="@+id/PlaylistWrapper"
        android:layout_width="match_parent"
        android:layout_height="285dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/SavePlaylistButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="64dp"
        android:visibility="invisible"
        android:text="@string/SaveString" />

    <Button
        android:id="@+id/PlayButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="64dp"
        android:visibility="invisible"
        android:text="@string/PlayString" />

    <Button
        android:id="@+id/DeletePlaylistButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/PlayButton"
        android:layout_alignParentStart="true"
        android:layout_marginRight="10dp"
        android:layout_marginStart="133dp"
        android:layout_marginBottom="64dp"
        android:visibility="invisible"
        android:text="@string/DeleteString" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="510dp"
        android:background="@color/colorAccent">
        <Button
            android:id="@+id/ToolbarAlbumCover"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/iconnote"
            />

        <Button
            android:id="@+id/ToolbarPlay"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/mock2"
            tools:layout_editor_absoluteX="145dp"
            tools:layout_editor_absoluteY="3dp" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="160dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            tools:layout_editor_absoluteX="199dp"
            tools:layout_editor_absoluteY="10dp">

        </ProgressBar>

    </LinearLayout>


</RelativeLayout>


