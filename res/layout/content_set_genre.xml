<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".SetGenreActivity"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="@dimen/headerFontSize"
        android:text="Przypisz parametry do utworÃ³w"
        android:paddingLeft="@dimen/headerPadding"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/SetGenresContainer">
    </ListView>

    <Button
        android:id="@+id/btnAssgin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Przypisz"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:background="@color/colorAccent">

        <Button
            android:id="@+id/ToolbarAlbumCover"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/iconnote"
            />

        <Button
            android:id="@+id/ToolbarPlay"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/mock2"
            tools:layout_editor_absoluteX="145dp"
            tools:layout_editor_absoluteY="3dp" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="160dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            tools:layout_editor_absoluteX="199dp"
            tools:layout_editor_absoluteY="10dp">

        </ProgressBar>

    </LinearLayout>


</LinearLayout>